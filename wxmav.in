PROG=${0##*/}
PROGBN=${PROG%.*}

PYINTERP=@PYTHON@
inst_py_dir=@pythondir@

e2 () { printf '%s: %s\n' "$PROG" "$*" 1>&2; }
fail () { e2 "$*"; exit 1; }

bin_file=""
for X in "pyo" "pyc" "py" ; do
    TF="$inst_py_dir/${PROGBN}.${X}"
    if test -f "$TF" ; then
        bin_file="$TF"
        break
    fi
done

test X"$bin_file" = X && fail \
    cannot find "${PROGBN}" program code in \""$inst_py_dir"\"

exec $PYINTERP "$bin_file" ${1+"$@"}
fail return from exec $PYINTERP \!
